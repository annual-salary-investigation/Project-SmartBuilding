                </Button.Content>
            </Button>
            <Button Width="100" Click="ElevatorButton_Click" Background="Transparent" BorderThickness="0" Grid.Row="0" Grid.Column="1">
                <Button.Content>
                    <iconPacks:PackIconMaterial Kind="Help" Width="100" />
